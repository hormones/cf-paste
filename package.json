{
	"name": "cf-paste",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"build:cf": "cross-env PLATFORM=cloudflare run-p type-check \"build-only {@}\" --",
		"build:self": "cross-env PLATFORM=self-hosted run-p type-check \"build-only {@}\" --",
		"dev:cf": "npm run build:cf && vite",
		"dev:self": "npm run build:self && tsx --watch server/app.self.ts",
		"preview:cf": "npm run build:cf && vite preview",
		"preview:self": "npm run build:self && vite preview",
		"deploy:cf": "npm run build:cf && wrangler deploy",
		"deploy:self": "npm run build:self && tsx server/app.self.ts",
		"db:cf:remote": "npx wrangler d1 execute cf-paste --remote --file=./schema.sql",
		"db:cf:local": "npx wrangler d1 execute cf-paste --local --file=./schema.sql",
		"db:init:self": "node scripts/init-db.js",
		"cf-typegen": "wrangler types server/platforms/cloudflare/worker-configuration.d.ts"
	},
	"dependencies": {
		"@noble/hashes": "^1.8.0",
		"@types/multer": "^2.0.0",
		"axios": "^1.9.0",
		"better-sqlite3": "^11.6.0",
		"crypto-js": "^4.2.0",
		"element-plus": "^2.10.2",
		"express": "^4.21.2",
		"md-editor-v3": "^5.7.1",
		"multer": "^2.0.2",
		"pinia": "^3.0.3",
		"qrcode": "^1.5.4",
		"vue": "^3.5.13",
		"vue-i18n": "^9.14.4",
		"vue-router": "^4.5.0"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.9.4",
		"@tsconfig/node22": "^22.0.1",
		"@types/better-sqlite3": "^7.6.12",
		"@types/crypto-js": "^4.2.2",
		"@types/express": "^5.0.3",
		"@types/node": "^22.14.0",
		"@types/qrcode": "^1.5.5",
		"@vitejs/plugin-vue": "^5.2.3",
		"@vue/tsconfig": "^0.7.0",
		"cross-env": "^7.0.3",
		"npm-run-all2": "^7.0.2",
		"sass": "^1.89.2",
		"tsx": "^4.20.3",
		"typescript": "~5.8.0",
		"unplugin-auto-import": "^19.3.0",
		"unplugin-element-plus": "^0.10.0",
		"unplugin-vue-components": "^28.7.0",
		"vite": "^6.2.4",
		"vite-plugin-vue-devtools": "^7.7.2",
		"vue-tsc": "^2.2.8",
		"wrangler": "^4.24.3"
	}
}
